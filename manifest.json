{
  "manifest_version": 3,
  "name": "GitHub Issue Notifier",
  "description": "Notifie lorsqu'un ticket GitHub correspond à un filtre spécifique.",
  "version": "1.0",
  "permissions": [
    "notifications",
    "identity",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
